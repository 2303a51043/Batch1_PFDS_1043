        "import numpy as np\n",
        "\n",
        "marks = np.array([\n",
        "    [85, 78, 92],\n",
        "    [56, 88, 70],\n",
        "    [90, 96, 85],\n",
        "    [45, 60, 52],\n",
        "    [80, 77, 89]\n",
        "])\n",
        "\n",
        "print(\"Student Marks (Rows=Students, Columns=Subjects):\")\n",
        "print(marks)\n",
        "\n",
        "avg_marks = np.mean(marks, axis=1)\n",
        "min_marks = np.min(marks, axis=1)\n",
        "max_marks = np.max(marks, axis=1)\n",
        "\n",
        "print(\"\\nAverage Marks per Student:\", avg_marks)\n",
        "print(\"Minimum Marks per Student:\", min_marks)\n",
        "print(\"Maximum Marks per Student:\", max_marks)\n",
        "\n",
        "print(\"\\nMarks of Student 2 and 4:\")\n",
        "print(marks[[1, 3]])\n",
        "\n",
        "print(\"\\nStudents who scored above 80 in any subject:\")\n",
        "print(marks[marks > 80])\n",
        "\n",
        "reshaped = marks.T\n",
        "print(\"\\nReshaped Array (Subjects as Rows):\")\n",
        "print(reshaped)\n",
        "\n",
        "print(\"\\nComment: The reshaped array helps in analyzing how each subject is performed by all students.\")\n"
      ]
    }
  ]
